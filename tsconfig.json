{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "noImplicitAny": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out"
  },
  "exclude": [
    "source",
    "node_modules",
    "typings/globals",
    "typings/modules",
    "dist"
  ],
  "baseUrl": "types",
  "typeRoots": ["types"],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
